@model AppointmentScheduling.Models.ViewModels.LoginViewModel

<h2>Sign In</h2>
<div>
    <div>
        <section>
            <form id="account" method="post" asp-action="Login" asp-controller="Account"></form>
            <h4>Use your registered email id and password to login</h4>
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-md-2" asp-for="Email"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control">
                    <span asp-validation="Email" class="text-danger"></span>
                </div>
            </div>
        </section>
    </div>
</div>