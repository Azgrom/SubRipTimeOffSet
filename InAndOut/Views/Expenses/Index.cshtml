@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expenses" asp-action="Create">Register a new expense</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense_registry in Model)
                {
                <tr>
                    <td width="30%">@expense_registry.ExpenseName</td>
                    <td width="30%">@expense_registry.Amount</td>
                    <td width="40%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expenses" asp-action="Update" asp-route-Id="@expense_registry.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Expenses" asp-action="DeletePost" asp-route-Id="@expense_registry.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>
